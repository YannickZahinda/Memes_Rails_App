<h2>Publish new meme</h2>

<%= form_with model: @fun, local: true do |form| %>
    <% if @fun.errors.any? %>
        <h2>An error occured</h2>
    <% end %>
    <p> 
        <%= form.label :name %>
        <br>
        <%= form.text_field :name %>
    </p>
    <p> 
        <%= form.label :content %>
        <br>
        <%= form.text_area :content %>
    </p>
    <p> 
        <%= form.label :author %>
        <br>
        <%= form.text_field :author %>
    </p>

    <p>
        <%= form.submit "Publish meme"%>
    </p>
<% end %>